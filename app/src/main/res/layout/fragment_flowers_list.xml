<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.ciceksepeti.viewmodel.MainViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_200"
            tools:context=".activity.MainActivity"
            tools:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/logo_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.06" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineTransaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="5dp" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/content_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.12" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintHead"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:visibility="invisible"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ÇiçekSepeti"
                    android:textSize="25sp"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/blue_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flowers_icon"
                    android:layout_marginRight="10dp"
                    app:layout_constraintRight_toLeftOf="@+id/textTitle"
                    app:layout_constraintTop_toTopOf="@+id/textTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/textTitle"/>

                <ImageView
                    android:id="@+id/arrow_left_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left_arrow"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="@+id/textTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/textTitle"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@+id/textTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/textTitle"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintFlowersSize"
                android:background="@drawable/background_shape"
                android:layout_width="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toLeftOf="@+id/constraintFlowersMap"
                app:layout_constraintTop_toBottomOf="@+id/constraintHead"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/search_symbol"
                    android:padding="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textProductTotal"
                    app:layout_constraintBottom_toBottomOf="@+id/textProductTotal" />


                <TextView
                    android:id="@+id/textProductTotal"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="29 Ürün"
                    android:textSize="16sp"
                    android:padding="15dp"
                    android:textColorHint="@color/price_color"
                    android:fontFamily="@font/open_sans_bold"
                    app:layout_constraintLeft_toRightOf="@+id/searchIcon" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintFlowersMap"
                android:background="@drawable/background_shape"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toRightOf="@+id/constraintFlowersSize"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/constraintFlowersSize"
                app:layout_constraintBottom_toBottomOf="@+id/constraintFlowersSize"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mapIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/placeholder"
                    android:padding="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textMap"
                    app:layout_constraintBottom_toBottomOf="@+id/textMap" />


                <TextView
                    android:id="@+id/textMap"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:hint="@string/place_holder_text"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans_semibold"
                    app:layout_constraintLeft_toRightOf="@+id/mapIcon"
                    android:textColor="@color/black"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintFilterandChoice"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintFlowersSize"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintArrangement"
                    android:background="@drawable/background_shape"
                    android:layout_width="0dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginRight="10dp"
                    app:layout_constraintRight_toLeftOf="@+id/constraintFilter"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textArrangement"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sıralama"
                        android:padding="15dp"
                        app:layout_constraintRight_toLeftOf="@+id/arrow_down_icon"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:id="@+id/arrow_down_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/down_arrow_color"
                        android:padding="10dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textArrangement"
                        app:layout_constraintBottom_toBottomOf="@+id/textArrangement"
                        app:layout_constraintLeft_toRightOf="@+id/textArrangement"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintFilter"
                    android:background="@drawable/background_shape"
                    android:layout_width="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textFilter"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filtrele"
                        android:padding="15dp"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toRightOf="@+id/filterIcon"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:id="@+id/filterIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/filter_icon"
                        android:padding="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textFilter"
                        app:layout_constraintBottom_toBottomOf="@+id/textFilter" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_choose_all_flowers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintFilterandChoice"
                app:layout_constraintVertical_bias="0.0"
                tools:listitem="@layout/item_choose_flowers" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>