<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.ciceksepeti.viewmodel.MainViewModel" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_200"
            tools:context=".activity.MainActivity"
            tools:layout_height="match_parent">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/logo_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.06" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineTransaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_end="5dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/logo_guideline_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/content_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.12" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintHead"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ÇiçekSepeti"
                    android:textSize="25sp"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="@color/blue_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flowers_icon"
                    android:layout_marginRight="10dp"
                    app:layout_constraintRight_toLeftOf="@+id/textTitle"
                    app:layout_constraintTop_toTopOf="@+id/textTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/textTitle"/>

                <ImageView
                    android:id="@+id/arrow_left_button_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/left_arrow"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="@+id/textTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/textTitle"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shopping_cart"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="@+id/textTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/textTitle"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintflowersImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintHead"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/logo_guideline_center"
                android:paddingBottom="20dp"
                app:layout_constraintRight_toRightOf="parent">

                <ImageView
                    android:id="@+id/flowersImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/flowers_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintFlowerInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintflowersImageView">

                <TextView
                    android:id="@+id/flowerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Limon çiçeği"
                    android:textSize="28sp"
                    android:fontFamily="@font/open_sans_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/price_color"/>

                <TextView
                    android:id="@+id/sellerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seller"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/open_sans_semibold"
                    app:layout_constraintTop_toBottomOf="@+id/flowerName"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/fastDeliveryIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seller"
                    android:textSize="18sp"
                    android:src="@drawable/shipped"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/sellerName"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/cargoDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Her gün kargo"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/open_sans_bold"
                    app:layout_constraintTop_toTopOf="@+id/fastDeliveryIcon"
                    app:layout_constraintBottom_toBottomOf="@+id/fastDeliveryIcon"
                    app:layout_constraintLeft_toRightOf="@+id/fastDeliveryIcon"
                    android:textColor="@color/kelly_green"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintPriceDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintFlowerInfo">

            <TextView
                android:id="@+id/flowersPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="29.90 TL"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/flowersPriceDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="29.90 TL"
                android:textSize="22sp"
                android:background="@drawable/striking_text"
                android:fontFamily="@font/open_sans_bold"
                android:layout_marginLeft="10dp"
                android:foreground="@drawable/striking_text"
                android:textColor="@color/grey_500"
                app:layout_constraintTop_toTopOf="@+id/flowersPrice"
                app:layout_constraintBottom_toBottomOf="@+id/flowersPrice"
                app:layout_constraintLeft_toRightOf="@+id/flowersPrice" />

            <TextView
                android:id="@+id/flowersPriceInstallment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="29.90 TL başlayan taksitlerle"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans_regular"
                app:layout_constraintTop_toBottomOf="@+id/flowersPrice"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

           <TextView
               android:id="@+id/added_basket"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               style="@style/ActionButton.Continue"
               app:layout_constraintTop_toBottomOf="@+id/constraintPriceDetail"
               android:padding="15dp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="100dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/touch"
                app:layout_constraintTop_toTopOf="@+id/added_basket"
                app:layout_constraintBottom_toBottomOf="@+id/added_basket"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/added_basket"/>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>