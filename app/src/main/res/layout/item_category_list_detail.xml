<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintlayoutCategoryDetailName"
            android:background="@color/grey_100"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/checkBoxButtonContract"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/ic_tick_gray" />


            <TextView
                android:id="@+id/txtCategoryDetailName"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/checkBoxButtonContract"
                app:layout_constraintLeft_toRightOf="@+id/checkBoxButtonContract"
                app:layout_constraintBottom_toBottomOf="@+id/checkBoxButtonContract"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_500"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/open_sans_semibold"
                tools:text="List" />

            <ImageView
                app:layout_constraintTop_toTopOf="@+id/txtCategoryDetailName"
                app:layout_constraintBottom_toBottomOf="@+id/txtCategoryDetailName"
                android:background="@drawable/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</layout>