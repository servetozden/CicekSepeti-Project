<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardViewDetail"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewFlowers"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                tools:src="@drawable/ic_launcher_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/nameFlowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/imageViewFlowers"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans_semibold"
                tools:text="Kırmızı Gerbera Çiçek Buketi"/>

            <TextView
                android:id="@+id/priceFlowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/imageViewFlowers"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/nameFlowers"
                android:textSize="20sp"
                android:textColor="@color/price_color"
                android:fontFamily="@font/open_sans_bold"
                tools:text="29.90 TL"/>

            <TextView
                android:id="@+id/txtDiscountAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/striking_text"
                android:fontFamily="@font/open_sans_bold"
                android:foreground="@drawable/striking_text"
                android:gravity="center"
                android:textColor="@color/grey_400"
                android:textSize="18sp"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="@+id/priceFlowers"
                app:layout_constraintLeft_toRightOf="@+id/priceFlowers"
                tools:text="500 TL " />

            <ImageView
                android:id="@+id/colorPalette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/imageViewFlowers"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/priceFlowers"
                android:src="@drawable/color_palette" />

            <TextView
                android:id="@+id/colorPaletteDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/grey_400"
                android:textSize="16sp"
                android:text="Farklı renkler"
                app:layout_constraintTop_toTopOf="@+id/colorPalette"
                app:layout_constraintLeft_toRightOf="@+id/colorPalette"
                app:layout_constraintBottom_toBottomOf="@+id/colorPalette" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>
</layout>